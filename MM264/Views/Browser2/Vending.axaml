<wpflikeavalonianavigation:Page xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpflikeavalonianavigation="using:WpfLikeAvaloniaNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MM264.Vending">
    <Grid RowDefinitions="Auto,*" Margin="16">
		<TextBlock Text="Торговые аппараты (ТА)" FontSize="20" FontWeight="Bold"/>

        <Grid Grid.Row="1" RowDefinitions="Auto, Auto, *, Auto" RowSpacing="12">
            <Border BorderThickness="1" BorderBrush="Gray" Padding="12" CornerRadius="6">
				<StackPanel Orientation="Horizontal" Spacing="10">
					<Button Background="LightGreen" Content="Выбрать файл"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
				<Button Background="LightGreen" Content="Проверить файл"/>
                <Button Background="LightGreen" Content="Загрузить в систему"/>
            </StackPanel>
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" Padding="10" CornerRadius="6">
                <StackPanel Spacing="10">
                    <TextBlock Text="Предпросмотр данных из файла" FontWeight="SemiBold"/>

					<DataGrid AutoGenerateColumns="False" CanUserResizeColumns="True" Height="300">
				        <DataGrid.Columns>
					        <DataGridTextColumn Header="ID" Width="80"/>
                            <DataGridTextColumn Header="Название" Width="*"/>
                            <DataGridTextColumn Header="Модель" Width="*"/>
                            <DataGridTextColumn Header="Компания" Width="*"/>
                            <DataGridTextColumn Header="Серийный номер" Width="*"/>
                            <DataGridTextColumn Header="Адрес размещения" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</wpflikeavalonianavigation:Page>
