<wpflikeavalonianavigation:Page xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpflikeavalonianavigation="using:WpfLikeAvaloniaNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MM264.Week">
    <Grid RowDefinitions="Auto, *" Margin="16">
		<TextBlock Text="Неделя" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*,*,*,*" ColumnSpacing="8">
			<Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Понедельник" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Вторник" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="2" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Среда" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="3" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Четверг" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="4" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Пятница" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="5" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Суббота" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
            <Border Grid.Column="6" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="8">
				<TextBlock Text="Воскресенье" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Border>
        </Grid>
    </Grid>
</wpflikeavalonianavigation:Page>
