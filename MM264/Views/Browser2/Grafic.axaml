<wpflikeavalonianavigation:Page xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpflikeavalonianavigation="using:WpfLikeAvaloniaNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MM264.Grafic">
    <Grid RowDefinitions="Auto, Auto,*" Margin="16">
		<TextBlock Text="График работ" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="10" Margin="0,0,0,12">
			<Grid ColumnDefinitions="Auto, Auto, *, Auto" ColumnSpacing="12">
				<StackPanel Orientation="Horizontal" Spacing="6">
					<Button Content="День" Width="80"/>
                    <Button Content="Неделя" Width="80"/>
                </StackPanel>
                <ComboBox Grid.Column="1" SelectedIndex="0" Width="220">
					<ComboBoxItem Content="Все сотрудники"/>
                    <ComboBoxItem Content="Иванов И. И."/>
                    <ComboBoxItem Content="Петрова П. П."/>
                </ComboBox>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="2">
			<Grid ColumnDefinitions="Auto, *">
				<StackPanel>
					<Border BorderThickness="0,0,1,0" BorderBrush="Gray" Padding="8">
                        <TextBlock Text="Сотрудники" FontWeight="SemiBold"/>
                    </Border>
                    <Border Padding="8">
                        <Button Content="Иванов И.И."/>
                    </Border>

                    <Border Padding="8">
                        <Button Content="Петров П.П."/>
                    </Border>

                    <Border Padding="8">
                        <Button Content="Сидоров С.С."/>
                    </Border>
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</wpflikeavalonianavigation:Page>
