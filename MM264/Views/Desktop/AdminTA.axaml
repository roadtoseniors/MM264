<wpflikeavalonianavigation:Page xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpflikeavalonianavigation="using:WpfLikeAvaloniaNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MM264.AdminTA">
    <Grid RowDefinitions="Auto,*" Margin="10">
        <!-- Заголовок -->
        <Border Background="#333333" Height="48" Padding="10">
            <Grid>
                <TextBlock Text="000 Торговые Автоматы" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Администрирование / Торговые автоматы" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0" Spacing="10">
            <!-- Заголовок таблицы и фильтры -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="Торговые автоматы" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="Всего найдено 9 шт." VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="Показать"/>
                <ComboBox Width="60" SelectedIndex="0">
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>
                <TextBlock Text="записей" VerticalAlignment="Center"/>
                <TextBox Width="200" Watermark="Фильтр"/>
                <Button Content="+ Добавить" x:Name="Create" Click="Create_Click"/>
                <Button Content="Экспорт"/>
            </StackPanel>

            <DataGrid AutoGenerateColumns="False" x:Name="TableVending" CanUserResizeColumns="True" Height="400" ItemsSource="{Binding VendingMachines}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Название автомата" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding ModelNavigation.Model1}" Width="*"/>
                    <DataGridTextColumn Header="Компания" Binding="{Binding CompanyNavigation.Company1}" Width="*"/>
                    <DataGridTextColumn Header="Модем" Binding="{Binding Serial}" Width="*"/>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding Location}" Width="*"/>
                    <DataGridTextColumn Header="В работе с" Binding="{Binding InstallDate}" Width="*"/>
                    <DataGridTemplateColumn Header="Действия" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                                    <Button Content="✏️" Width="25" Height="25"/>
                                    <Button Content="🗑️" Width="25" Height="25"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Пагинация -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5" Margin="0,10,0,0">
                <TextBlock Text="Записи с 1 до 9 из 9 записей" VerticalAlignment="Center"/>
                <Button Content="«" Width="30"/>
                <Button Content="1" Width="30"/>
                <Button Content="»" Width="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</wpflikeavalonianavigation:Page>
